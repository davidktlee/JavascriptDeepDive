{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "plugin:import/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "rules": {
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "ts": "never",
        "tsx": "never"
      }
    ],
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": [
      "warn"
    ],
    "@typescript-eslint/typedef": [
      "error",
      {
        "arrowParameter": true
      }
    ],
    "no-empty-function": "off",
    "@typescript-eslint/no-empty-function": [
      "warn"
    ]
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  }
}